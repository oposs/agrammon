*** output ***

+animalcategory
  print = 7
  ++units  
    en = -
  ++description
    Animal category
  ++formula
    Val(animalcategory, SmallRuminants::Excretion);

+n_excretion
  print = 7
  ++units  
    en = kg N/year
    de = kg N/Jahr
    fr = kg N/an
  ++description
    Annual N excreted by other animals.
  ++formula
       Val(n_excretion, SmallRuminants::Excretion); 

+n_from_other
  print = 7
  ++units  
    en = kg N/year
    de = kg N/Jahr
    fr = kg N/an
  ++description
    Annual N flux from other animals housing.
  ++formula
       Val(n_outhousing, SmallRuminants::Housing);

+tan
  print = 7
  ++units  
    en = kg N/year
    de = kg N/Jahr
    fr = kg N/an
  ++description
    Annual N flux as TAN from other animals housing.
  ++formula
       Val(tan_outhousing, SmallRuminants::Housing);

